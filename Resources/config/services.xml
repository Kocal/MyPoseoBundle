<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="my_poseo.client.class">Guzzle\Service\Client</parameter>
    </parameters>

    <services>
        <service id="my_poseo" class="%my_poseo.client.class%">
            <argument type="service" id="guzzle.client"/>
        </service>

        <service id="my_poseo.guzzle.client" class="%guzzle.client.class%">
            <tag name="guzzle.client"/>
            <argument>%my_poseo.api.base_url%</argument>
            <argument type="collection">
                <argument key="version">%my_poseo.api.version%</argument>
            </argument>
        </service>

    </services>
</container>