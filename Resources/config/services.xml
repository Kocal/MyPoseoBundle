<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
    </parameters>

    <services>
        <service id="my_poseo.follow" class="%my_poseo.follow.class%">
            <argument type="service" id="my_poseo.main.guzzle.client"/>
        </service>

        <service id="my_poseo.follow.client" class="Tristanbes\MyPoseoBundle\Connection\RestClient">
            <argument>%my_poseo.api.key%</argument>
            <argument>%my_poseo.api.main.base_url%</argument>
            <argument>%my_poseo.api.main.version%</argument>
            <call method="setDefaultOption">
                <argument>query</argument>
                <argument type="collection">
                    <argument key="key"></argument>
                </argument>
            </call>
        </service>

    </services>
</container>
