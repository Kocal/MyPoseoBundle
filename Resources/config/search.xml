<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="my_poseo.search" class="Tristanbes\MyPoseoBundle\Api\Search">
            <argument type="service" id="my_poseo.search.guzzle.client"/>
        </service>

        <service id="my_poseo.follow.client" class="Tristanbes\MyPoseoBundle\Connection\RestClient">
            <argument>%my_poseo.api.key%</argument>
            <argument>%my_poseo.api.main.base_url%</argument>
            <argument>%my_poseo.api.main.version%</argument>
        </service>

        <service id="my_poseo.search.guzzle.client" class="%guzzle.client.class%">
            <tag name="guzzle.client"/>
            <argument>%my_poseo.api.search.base_url%</argument>
            <argument type="collection">
                <argument key="version">%my_poseo.api.search.version%</argument>
            </argument>
            <call method="setDefaultOption">
                <argument>query</argument>
                <argument type="collection">
                    <argument key="key">%my_poseo.api.key%</argument>
                </argument>
            </call>
        </service>

    </services>
</container>
