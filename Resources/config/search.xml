<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="my_poseo.search" class="%my_poseo.api.search_class%">
            <argument type="service" id="my_poseo.follow.client"/>
        </service>

        <service id="my_poseo.follow.client" class="Tristanbes\MyPoseoBundle\Connection\RestClient">
            <argument>%my_poseo.api.key%</argument>
            <argument>%my_poseo.api.main.base_url%</argument>
        </service>

    </services>
</container>
